@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    Layout = "_Layout";
}
<style>
    .grid {
        display: grid;
        grid-gap: 2px;
        width: 100%;
        max-width: 500px;
        margin: auto;
    }
    .cell {
        border: 1px solid #ccc;
        width: 100%;
        aspect-ratio: 1;
        text-align: center;
        font-size: 1.5em;
        font-weight: bold;
        line-height: 2.5;
        cursor: pointer;
    }
    .cell.taken {
        pointer-events: none;
    }
    .active { background-color: #f8f9fa; }
</style>

<div class="text-center">
    <h1 class="display-4">Welcome to TIC TAC TWO</h1>
    <form method="post">
        <div class="container text-center mt-4">
            <p id="status">Waiting for players...</p>

            @* <div id="grid" class="grid"></div> *@
            <button class="btn btn-primary mt-3" id="join-game">Join as Player</button>

            <div class="mt-3">
                <p id="turn-notification"></p>
            </div>
        </div>
       
   
    </form>
</div>
