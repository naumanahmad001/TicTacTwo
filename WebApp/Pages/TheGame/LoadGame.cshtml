@page
@model WebApp.Pages.TheGame.LoadGameModel

@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Load Game</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
<div class="container mt-5">
    <div class="text-center">
        <h1>Select a Game to Load</h1>
    </div>

    <form method="post" class="mt-4">
        <div class="mb-3">
            <label for="gameSelect" class="form-label">Choose a Game</label>
            <select id="gameSelect" name="selectedGame" class="form-select">
                <option value="" disabled selected>Select a game</option>
                @foreach (var game in Model.Games)
                {
                    <option value="@game.Id">@game.GameName</option>
                }
            </select>
            <span class="text-danger">
                @if (ViewData.ModelState.ContainsKey("selectedGame"))
                {
                    @ViewData.ModelState["selectedGame"].Errors.FirstOrDefault()?.ErrorMessage
                }
            </span>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Load Game</button>
        </div>
    </form>
</div>
</body>
</html>