@page
@model WebApp.Pages.TheGame.LoadConfigModel

@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Load Config</title>
</head>
<body>
<div class="text-center">
    <h1>Select a Configuration to Load</h1>

    <form method="post">
        <div class="form-group">
            <label for="configSelect">Choose a Configuration</label>
            <select id="configSelect" name="selectedConfig" class="form-control">
                @foreach (var config in Model.Configurations)
                {
                    <option value="@config.Id">@config.ConfigName</option>
                }
            </select>
        </div>
            <div class="form-group">
                <label for="gameName">Game Name</label>
                <input id="gameName" asp-for="GameName" class="form-control" />
                <span asp-validation-for="GameName" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary mt-2">Start Game</button>
    </form>
</div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>